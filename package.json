{
  "name": "jiosaavn-api",
  "version": "1.0.0",
  "description": "Unofficial JioSaavn API",
  "license": "MIT",
  "repository": "https://github.com/sumitkolhe/jiosaavn-api",
  "author": "Sumit Kolhe",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "start": "bun dist/server.js",
    "build": "tsc",
    "format": "prettier --write \"./**/*.{js,ts,json}\"",
    "lint": "eslint .",
    "lint:fix": "bun run lint --fix",
    "deploy": "vercel deploy --prod",
    "postinstall": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint && bun run format"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@hono/zod-openapi": "^0.9.8",
    "@hono/zod-validator": "^0.2.0",
    "@scalar/hono-api-reference": "^0.4.3",
    "hono": "^4.1.0",
    "node-forge": "^1.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@kolhe/eslint-config": "2.0.0",
    "@types/bun": "^1.0.8",
    "@types/node": "^20.11.27",
    "@types/node-forge": "^1.3.11",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.10.0",
    "typescript": "^5.4.2"
  }
}
